#
# Description       : Repos needed for a standalone build of kobuki
# Versions          : Fixed to what was released on Ubuntu 20.04
# Build Dependencies: colcon-core, colcon-common-extensions
#
# To be used with kobuki_core/resources/venv.bash
#
repositories:
  # Build tools
  ament_cmake      : { type: 'git', url: 'https://github.com/ament/ament_cmake.git',       version: 'foxy' }
  ament_cmake_ros  : { type: 'git', url: 'https://github.com/ros2/ament_cmake_ros.git',    version: 'foxy' }
  ament_lint       : { type: 'git', url: 'https://github.com/ament/ament_lint.git',        version: 'foxy' }
  ament_package    : { type: 'git', url: 'https://github.com/ament/ament_package.git',     version: 'foxy' }

  # Kobuki dependencies
  eigen            : { type: 'git', url: 'https://gitlab.com/libeigen/eigen.git',          version: '3.3' }
  sophus           : { type: 'git', url: 'https://github.com/stonier/sophus.git',          version: 'release/1.2.x' }
  ecl_tools        : { type: 'git', url: 'https://github.com/stonier/ecl_tools.git',       version: 'release/1.0.x' }
  ecl_lite         : { type: 'git', url: 'https://github.com/stonier/ecl_lite.git',        version: 'release/1.1.x' }
  ecl_core         : { type: 'git', url: 'https://github.com/stonier/ecl_core.git',        version: 'release/1.1.x' }

  # Kobuki
  kobuki_core      : { type: 'git', url: 'https://github.com/kobuki-base/kobuki_core.git', version: 'release/1.0.x' }
